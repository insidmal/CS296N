@model Media
@{
    ViewBag.Title = Model.name;
}

    <h2>@Model.name</h2>
@Model.description

    @if (Model.mediaType == MediaType.Audio)
    {
        <p>
            @Html.Raw(Model.resourceLink)
        </p>
        <a asp-action="Songs">View All Songs</a>
    }
    else if (Model.mediaType == MediaType.Video)
    {
        <p>
            @Html.Raw(Model.resourceLink)
        </p>
        <a asp-action="Videos">View All Videos</a>

    }
    else if (Model.mediaType == MediaType.Image)
    {
        <p>
            <a href="@Model.resourceLink" target="_blank"><img src="@Model.resourceLink" width="60%" height="auto" /></a>
        </p>
        <a asp-action="Pictures">View All Images</a>

    }

