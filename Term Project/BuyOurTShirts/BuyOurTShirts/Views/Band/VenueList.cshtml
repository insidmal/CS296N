@model IEnumerable<Venue>
@{
    ViewData["Title"] = "View Venues";
}

<h2>View Venues</h2>

<span style="color:red">@ViewData["Message"]</span>

<table cellpadding="3">
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>

    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4">No Venues</td></tr>
    }
    else
    {
        foreach (Venue ven in Model)
        {
            <tr>
                <td>@ven.name</td>
                <td>@ven.address</td>
                <td>@ven.city</td>
                <td>@ven.state</td>
                <td>
                    <form asp-action="VenueEdit" asp-route-id="@ven.ID" method="get">
                        <button type="submit" class="btn btn-sm btn-primary">Edit</button>
                    </form>
                </td>
                <td>
                    <form asp-action="VenueDelete" asp-route-id="@ven.ID" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a asp-action="VenueCreate">Add a Venue</a><br />