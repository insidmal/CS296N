@model IEnumerable<Show>
@{
    ViewData["Title"] = "View Shows";
}

<h2>View Venues</h2>

<span style="color:red">@ViewData["Message"]</span>

<table cellpadding="3">
    <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Venue</th>

    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3">No Shows</td></tr>
    }
    else
    {
        foreach (Show show in Model)
        {
            <tr>
                <td>@show.name</td>
                <td>@show.date</td>
                <td>@show.venue.name</td>

                <td>
                    <form asp-action="ShowEdit" asp-route-id="@show.ID" method="get">
                        <button type="submit" class="btn btn-sm btn-primary">Edit</button>
                    </form>
                </td>
                <td>
                    <form asp-action="ShowDelete" asp-route-id="@show.ID" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a asp-action="ShowCreate">Add a Show</a><br />