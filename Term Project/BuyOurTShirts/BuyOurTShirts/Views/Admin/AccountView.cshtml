@model IEnumerable<Account>
@{
    ViewData["Title"] = "View Accounts";
}

<h2>View Accounts</h2>
<span style="color:red">@ViewData["Message"]</span>

<table cellpadding="3">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3">No User Accounts</td></tr>
    }
    else
    {
        foreach (Account user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="AccountEdit" asp-route-id="@user.Id" method="get">
                        <button type="submit" class="btn btn-sm btn-primary">Edit</button>
                    </form>
                </td>
                <td>
                    <form asp-action="AccountDelete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a asp-action="AccountCreate">Create an Account</a><br />
