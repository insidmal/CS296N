@model Account
@{
    ViewBag.Title = "Edit an Account";
}

<h2>Edit an Account</h2>

<span style="color:red">@ViewData["Message"]</span>

<div asp-validation-summary=" All"></div>

<form asp-action="AccountEdit" method="post">
    <p>
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" />
    </p>

    <p>
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" />
    </p>
    <p>
        <label asp-for="UserName">User Name</label>
        <input asp-for="UserName" />
    </p>
    <p>
        <label asp-for="Bio">Bio</label>
        <input asp-for="Bio" />
    </p>
    <p>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
    </p>
    <p>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
    </p>
    <p>
        <input asp-for="SecurityStamp" type="hidden" />
        <button type="submit">Create</button>
    </p>

    <button asp-action="AccountView">Cancel</button><br />
</form>

