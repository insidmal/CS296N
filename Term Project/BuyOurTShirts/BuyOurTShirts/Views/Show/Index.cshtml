@model List<Show>
@{
    ViewBag.Title = "Upcoming Shows";
}

<h2>Upcoming Shows</h2>
@if (Model.Count > 0)
{
    <table cellpadding="4" border="0">
        <tr><th>Date</th>><th>Show Name</th><th>Venue</th></th><th>Cost</th></tr>


        @foreach (Show s in Model)
        {
            <tr> <td>@s.date</td><td><a asp-action="Show" asp-route-id="@s.ID">@s.name</a></td><td><a asp-controller="Venue" asp-action="Venue" asp-route-id="@s.VenueID">@s.venue</a></td><td>$@s.cost</td> </tr>
        }


    </table>


}
else
{ <span>Sorry, no Upcoming Shows.</span> }

