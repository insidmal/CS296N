@model IEnumerable<Account>
@{
    ViewData["Title"] = "ViewUser";
}

<h2>ViewUser</h2>

<table cellpadding="3">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3">No User Accounts</td></tr>
    }
    else
    {
        foreach (Account user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    }
</table>

<a asp-action="CreateUser">Create an Account</a><br />
<a asp-action="Index">Admin Page</a>